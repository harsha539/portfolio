name: Deploy static site to GitHub Pages

# Run on pushes to the main branch
on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      pages: write
      id-token: write

    steps:
      # 1) Checkout the repository
      - name: Checkout repository
        uses: actions/checkout@v4

      # 2) (Optional) - If you had a build step (npm, etc.) you'd run it here.
      # For a plain static site we do nothing.

      # 3) Upload the site content as a Pages artifact
      - name: Upload artifact for GitHub Pages
        uses: actions/upload-pages-artifact@v1
        with:
          # Path to files to publish (root is repository root)
          path: .

      # 4) Deploy the artifact to GitHub Pages
      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v1

